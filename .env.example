# Example environment variables file
# Copy this file to .env and edit

# Debug mode
DEBUG=false

# Download directory
DOWNLOAD_DIR=/tmp/insta_downloads

# Concurrent download limit
MAX_CONCURRENT_DOWNLOADS=3

# Download timeout (seconds)
DOWNLOAD_TIMEOUT=300

# Instagram session credentials (required for downloading stories)
# INSTAGRAM_USERNAME=your_username
# INSTAGRAM_PASSWORD=your_password

# Alternative: use a session file
# INSTAGRAM_SESSION_FILE=/path/to/session/file

# Rate limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# Automatic cleanup
AUTO_CLEANUP=true
CLEANUP_AFTER_SECONDS=300
